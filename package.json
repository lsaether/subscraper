{
  "name": "subscraper",
  "version": "1.0.0",
  "description": "Basic and rough scraping tool for Substrate based blockchains.",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --outDir build",
    "clean": "rm -rf build",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet",
    "lint:fix": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "start": "ts-node src/index start",
    "test": "ava"
  },
  "author": "Logan Saether <x@logansether.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/node": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "ava": "^3.7.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@polkadot/api": "^1.11.2",
    "@polkadot/types": "^1.11.2",
    "@polkadot/util": "^2.8.1",
    "@polkadot/util-crypto": "^2.8.1",
    "commander": "^5.0.0",
    "nedb-promises": "^4.0.3",
    "winston": "^3.2.1"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
